<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.sopt.saver.saver.Category.CategoryActivity">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@drawable/category_navibarbg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="카테고리" />
        <ImageView
            android:id="@+id/category_find_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/category_search"/>
    </RelativeLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="vertical">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:columnCount="2"
            android:useDefaultMargins="true">
            <ImageView
                android:id="@+id/cate_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_image1" />
            <ImageView
                android:id="@+id/cate_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_image2" />
            <ImageView
                android:id="@+id/cate_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_image3"/>
            <ImageView
                android:id="@+id/cate_img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_image4" />
            <ImageView
                android:id="@+id/cate_img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_image5" />
            <ImageView
                android:id="@+id/cate_img6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/category_image6"/>
        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/category_tapbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/category_home_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/category_tapbarhome"/>

        <ImageView
            android:id="@+id/category_category_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/category_tapbarcategory"/>

        <ImageView
            android:id="@+id/category_message_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/category_tapbarmessage"/>

        <ImageView
            android:id="@+id/category_mydeal_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/category_tapbarmymy"/>
    </LinearLayout>
</LinearLayout>
