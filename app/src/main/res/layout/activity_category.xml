<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3.4"
    tools:context="com.sopt.saver.saver.Category.CategoryActivity">

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@drawable/category_navibarbg">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="카테고리" />
        <ImageView
            android:id="@+id/category_find_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/category_search"/>
    </RelativeLayout>

    <RelativeLayout
        android:gravity="top"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cate_img1"
            android:layout_width="188dp"
            android:layout_height="146dp"
            android:background="@drawable/category_image1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/cate_img2"
            android:layout_width="188dp"
            android:layout_height="146dp"
            android:background="@drawable/category_image2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cate_img3"
            android:layout_alignParentLeft="true"
            android:layout_width="188dp"
            android:layout_height="146dp"
            android:background="@drawable/category_image3"/>

        <ImageView
            android:id="@+id/cate_img4"
            android:layout_width="188dp"
            android:layout_height="146dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/category_image4" />
    </RelativeLayout>

    <RelativeLayout
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/cate_img5"
            android:layout_width="188dp"
            android:layout_height="146dp"
            android:background="@drawable/category_image5"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/cate_img6"
            android:layout_width="188dp"
            android:layout_height="146dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/category_image6"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@drawable/category_tapbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/category_home_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/category_tapbarhome"/>

        <ImageView
            android:id="@+id/category_category_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/category_tapbarcategory"/>

        <ImageView
            android:id="@+id/category_message_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/category_tapbarmessage"/>

        <ImageView
            android:id="@+id/category_mydeal_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:src="@drawable/category_tapbarmymy"/>
    </LinearLayout>
</LinearLayout>
