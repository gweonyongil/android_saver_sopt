<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sopt.saver.saver.Mypage.MyPageActivity">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:weightSum="1"
        android:orientation="vertical">

        <!-- 상단바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/main_actionbar"
            android:background="#ffffff"
            android:layout_weight="0.1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:weightSum="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mypage_back"
                    android:scaleType="fitCenter"
                    android:layout_gravity="left"
                    android:background="@android:color/transparent"
                    android:layout_weight="0.1"
                    android:id="@+id/mypage_back_btn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="마이 페이지"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="0.7"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_weight="0.1"
                    android:src="@drawable/mypage_write"
                    android:id="@+id/mypage_write_btn"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mypage_more"
                    android:scaleType="fitCenter"
                    android:layout_gravity="right"
                    android:layout_weight="0.1"
                    android:id="@+id/mypage_more_btn"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

        </LinearLayout>

        <!-- 회원정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mypage_profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,800P"
                android:textSize="23dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="soptzzang123"
                android:textSize="11dp"
                android:textColor="#FB9726"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="김이름"
                android:layout_marginTop="5dp"/>
        </LinearLayout>


        <!-- 리스트뷰 -->

        <ListView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:id="@+id/mypage_list"
            android:divider="#000000">
        </ListView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
