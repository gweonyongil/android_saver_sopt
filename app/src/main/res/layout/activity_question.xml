<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.sopt.saver.saver.Question.QuestionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#FAFAFA">

        <ImageButton
            android:id="@+id/question_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:background="@drawable/message2_back"/>

        <TextView
            android:id="@+id/question_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="문의하기"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/question_register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:background="@drawable/message3_writego" />

    </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="33dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29dp"
                        android:text="문의 종류"
                        android:textSize="10sp"
                        android:textColor="#fb9726"/>

                    <Spinner
                        android:id="@+id/question_sort_spinner"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="29dp"
                        android:text="문의 종류"
                        android:textSize="10sp"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29dp"
                        android:text="답변받을 이메일"
                        android:textSize="10sp"
                        android:textColor="#fb9726"/>

                    <EditText
                        android:id="@+id/question_email"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="29dp"
                        android:hint="이메일을 입력해주세요."
                        android:textColorHint="#000000"
                        android:textColorHighlight="#000000"
                        android:inputType="textEmailAddress"
                        android:textSize="13sp"
                        android:textColor="#000000"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="29dp"
                        android:text="문의 내용"
                        android:textSize="10sp"
                        android:textColor="#fb9726"/>
                </LinearLayout>

                    <EditText
                        android:id="@+id/question_edit"
                        android:layout_width="300dp"
                        android:layout_height="335dp"
                        android:layout_marginBottom="52dp"
                        android:layout_marginLeft="29dp"
                        android:layout_marginRight="29dp"
                        android:gravity="start"
                        android:hint="내용을 입력해 주세요"
                        android:textColorHint="#000000"
                        android:textSize="13dp"
                        android:textColor="#000000" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>
