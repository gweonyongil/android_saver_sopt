<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.sopt.saver.saver.Sign.SignUpActivity">

    <ImageView
        android:id="@+id/signup_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/signup_back"></ImageView>

    <TextView
        android:id="@+id/signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="151dp"
        android:text="회원가입"
        android:textColor="#ffffff"
        android:textSize="16dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/signup_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_below="@id/signup_text"
        android:layout_marginTop="36dp"
        android:text="아이디(메일)"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/signup_id_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignBottom="@+id/signup_id_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="36dp" />

    <TextView
        android:id="@+id/signup_pw_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_id_title"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@id/signup_id_title"
        android:text="비밀번호"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/signup_pw_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/signup_id_title"
        android:layout_alignBottom="@id/signup_pw_title"
        android:layout_alignLeft="@id/signup_id_edit"
        android:layout_alignRight="@id/signup_id_edit"
        android:singleLine="true"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/signup_pw_check_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_pw_title"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@id/signup_id_title"
        android:text="비밀번호 확인"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/signup_pw_check_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/signup_id_title"
        android:layout_alignBottom="@id/signup_pw_check_title"
        android:layout_alignLeft="@id/signup_id_edit"
        android:layout_alignRight="@id/signup_id_edit"
        android:singleLine="true"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/signup_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_pw_check_title"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@id/signup_id_title"
        android:text="이름"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/signup_name_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/signup_id_title"
        android:layout_alignBottom="@id/signup_name_title"
        android:layout_alignLeft="@id/signup_id_edit"
        android:layout_alignRight="@id/signup_id_edit" />

    <TextView
        android:id="@+id/signup_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_name_title"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@id/signup_id_title"
        android:text="핸드폰 번호"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/signup_phone_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/signup_id_title"
        android:layout_alignBottom="@id/signup_phone_title"
        android:layout_alignLeft="@id/signup_id_edit"
        android:layout_alignRight="@id/signup_id_edit"
        android:hint="예시)01057773311"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/signup_bank_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_phone_title"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@id/signup_id_title"
        android:text="은행"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/signup_bank_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/signup_id_title"
        android:layout_alignBottom="@id/signup_bank_title"
        android:layout_alignLeft="@id/signup_id_edit"
        android:layout_alignRight="@id/signup_id_edit" />

    <TextView
        android:id="@+id/signup_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_bank_title"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@id/signup_id_title"
        android:text="계좌번호"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/signup_account_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/signup_id_title"
        android:layout_alignBottom="@id/signup_account_title"
        android:layout_alignLeft="@id/signup_id_edit"
        android:layout_alignRight="@id/signup_id_edit" />

    <TextView
        android:id="@+id/signup_birth_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_account_title"
        android:layout_marginTop="24dp"
        android:layout_alignLeft="@id/signup_id_title"
        android:text="생년월일"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/signup_birth_edit"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/signup_id_title"
        android:layout_alignBottom="@id/signup_birth_title"
        android:layout_alignLeft="@id/signup_id_edit"
        android:layout_alignRight="@id/signup_id_edit"
        android:hint="예시)19950313"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:id="@+id/signup_check_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_birth_title"
        android:layout_marginTop="17dp"
        android:layout_alignLeft="@id/signup_id_title">
        <CheckBox
            android:id="@+id/signup_sms_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMS 수신에 동의합니다 (선택)"
            android:textColor="#ffffff" />

        <CheckBox
            android:id="@+id/signup_email_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Email 수신에 동의합니다 (선택)"
            android:textColor="#ffffff" />

        <CheckBox
            android:id="@+id/signup_use_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="이용약관에 동의합니다."
            android:textColor="#ffffff" />

        <CheckBox
            android:id="@+id/signup_personal_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="개인정보 취급방침에 동의합니다"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        android:id="@+id/signup_submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_signup"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signup_check_layout"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
