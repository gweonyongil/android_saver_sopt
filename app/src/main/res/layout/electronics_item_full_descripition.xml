<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/electronics_user_id_tv"
                android:text="아이디"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/electronics_full_item_img"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <Button
                android:id="@+id/electronics_picture_btn"
                android:layout_marginTop="20dp"
                android:text="사진보기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/electronics_item_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="텍스트1" />

                <TextView
                    android:id="@+id/electronics_time_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Time" />
            </LinearLayout>

            <TextView
                android:id="@+id/electronics_item_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="텍스트2" />

            <TextView
                android:id="@+id/electronics_item_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="텍스트3" />

            <TextView
                android:id="@+id/electronics_item_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="텍스트4" />

            <TextView
                android:id="@+id/electronics_item_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="텍스트5" />

            <TextView
                android:id="@+id/electronics_item_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="텍스트6" />

            <TextView
                android:id="@+id/electronics_item_text7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="텍스트7" />

            <TextView
                android:id="@+id/electronics_item_text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="텍스트8" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/able_time_layout"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/electronics_full_item_image1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toLeftOf="@+id/electronics_full_item_image1_text" />

                    <TextView
                        android:id="@+id/electronics_full_item_image1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/electronics_full_item_image2"
                        android:text="text1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/able_time_layout"
                    android:layout_alignParentRight="true">
                    <ImageView
                        android:id="@+id/electronics_full_item_image2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_toLeftOf="@+id/electronics_full_item_image2_text" />
                    <TextView
                        android:id="@+id/electronics_full_item_image2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="text2" />

                </LinearLayout>

                <Button
                    android:id="@+id/electronics_answer_btn"
                    android:text="답변하기"
                    android:layout_toLeftOf="@id/able_time_layout"
                    android:layout_marginRight="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
