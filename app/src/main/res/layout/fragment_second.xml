<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.sopt.saver.saver.Sign.SecondFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/singup_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:src="@drawable/main_logo"></ImageView>

        <TextView
            android:id="@+id/signup_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/singup_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="9dp"
            android:text="추가정보 기입"
            android:textColor="#ffffff"></TextView>

        <TextView
            android:id="@+id/id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_text"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="74dp"
            android:text="지역"
            android:textColor="#ffffff" />

        <Spinner
            android:id="@+id/id_edit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/id_title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/pw_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/id_title"
            android:layout_below="@id/id_title"
            android:layout_marginTop="26dp"
            android:text="선호방법"
            android:textColor="#ffffff" />

        <Spinner
            android:id="@+id/pw_edit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/pw_title"
            android:layout_alignLeft="@id/id_edit"
            android:layout_alignRight="@id/id_edit"
            android:layout_toRightOf="@id/id_title"
            android:inputType="numberPassword"
            android:singleLine="true" />

        <TextView
            android:id="@+id/pw_check_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/id_title"
            android:layout_below="@id/pw_title"
            android:layout_marginTop="26dp"
            android:text="사용카드"
            android:textColor="#ffffff" />

        <Spinner
            android:id="@+id/pw_check_edit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/pw_check_title"
            android:layout_alignLeft="@id/id_edit"
            android:layout_alignRight="@id/id_edit"
            android:layout_toRightOf="@id/id_title"
            android:inputType="numberPassword"
            android:singleLine="true" />

        <TextView
            android:id="@+id/name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/id_title"
            android:layout_below="@id/pw_check_title"
            android:layout_marginTop="26dp"
            android:text="VISA 카드 유무"
            android:textColor="#ffffff" />

        <Spinner
            android:id="@+id/name_edit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/name_title"
            android:layout_alignLeft="@id/id_edit"
            android:layout_alignRight="@id/id_edit"
            android:layout_toRightOf="@id/id_title" />

        <TextView
            android:id="@+id/phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/id_title"
            android:layout_below="@id/name_title"
            android:layout_marginTop="26dp"
            android:text="통신사"
            android:textColor="#ffffff" />

        <Spinner
            android:id="@+id/phone_edit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/phone_title"
            android:layout_alignLeft="@id/id_edit"
            android:layout_alignRight="@id/id_edit"
            android:layout_toRightOf="@id/id_title"
            android:hint="예시)01057773311"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/bank_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/id_title"
            android:layout_below="@id/phone_title"
            android:layout_marginTop="26dp"
            android:text="사용중인 요금제"
            android:textColor="#ffffff" />

        <EditText
            android:id="@+id/bank_edit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/bank_title"
            android:layout_alignLeft="@id/id_edit"
            android:layout_alignRight="@id/id_edit"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/id_title" />

        <TextView
            android:id="@+id/account_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/bank_title"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_marginTop="27dp"
            android:text="추가 정보를 기입하시면 보다 더 정확한 정보를 제공받으실 수 있습니다"
            android:textAlignment="center"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/account_title"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="31dp" />


    </RelativeLayout>

</FrameLayout>
