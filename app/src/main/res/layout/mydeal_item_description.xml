<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#fafafa"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="107dp"
            android:layout_height="107dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:background="@drawable/detailpage_profilebg"
                android:gravity="center">

                <ImageView
                    android:id="@+id/mydeal_item_img"
                    android:layout_width="69dp"
                    android:layout_height="69dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mydeal_item_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="11dp"
                android:text="텍스트1"
                android:textColor="#000000"
                android:textSize="11dp" />

            <LinearLayout
                android:id="@+id/mydeal_text2_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mydeal_item_text1"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="34dp">

                <ImageView
                    android:id="@+id/mydeal_text2_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/mydeal_question" />

                <TextView
                    android:id="@+id/mydeal_item_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="텍스트2"
                    android:textColor="#000000"
                    android:textSize="9dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mydeal_text3_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mydeal_text2_layout"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="34dp">

                <ImageView
                    android:id="@+id/mydeal_text3_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/mydeal_money" />

                <TextView
                    android:id="@+id/mydeal_item_text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="텍스트3"
                    android:textColor="#000000"
                    android:textSize="9dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mydeal_text4_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mydeal_text3_layout"
                android:layout_marginBottom="23dp"
                android:layout_marginLeft="34dp">

                <ImageView
                    android:id="@+id/mydeal_text4_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/mydeal_time" />

                <TextView
                    android:id="@+id/mydeal_item_text4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="텍스트4"
                    android:textColor="#000000"
                    android:textSize="9dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/mydeal_item_text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="18dp"
                android:layout_marginTop="7dp"
                android:text="텍스트5"
                android:textColor="#000000"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/mydeal_item_text6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/mydeal_item_text5"
                android:layout_marginRight="18dp"
                android:layout_marginTop="3dp"
                android:text="텍스트6"
                android:textColor="#fb9726"
                android:textSize="9dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="14dp"
                android:gravity="bottom">

                <LinearLayout
                    android:id="@+id/able_time_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/electronics_item_image1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/electronics_item_image1_text"
                        android:src="@drawable/mydeal_talkicon" />

                    <TextView
                        android:id="@+id/mydeal_item_image1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="18dp"
                        android:text="text1"
                        android:textColor="#51c7c9"
                        android:textSize="9dp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
